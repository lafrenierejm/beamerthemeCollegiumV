\RequirePackage{tikz}
\RequirePackage[%
  orientation=landscape,%
  scale=1.5,%
]{beamerposter}

% Manually set dimensions because beamerposter is broken.
\setlength{\paperwidth}{36in}
\setlength{\paperheight}{24in}
\setlength{\textwidth}{35in}
\setlength{\textheight}{24in}

\usefonttheme[onlymath]{serif}

% hyperref
\DeclareUrlCommand\urlanglebracket{%
  \def\UrlLeft{<}%
  \def\UrlRight{>}%
}
%% macros
\newcommand{\email}[1]{\href{mailto:#1}{\url{#1}}}
\newcommand{\emailcontact}[1]{\href{mailto:#1}{\urlanglebracket{#1}}}

\newcommand{\major}[1]{\def\@major{#1}}

\setbeamertemplate{headline}{%
  \begin{beamercolorbox}[ht=4in,wd=\textwidth]{headline}
    \begin{minipage}[b][3.75in][b]{0.25\paperwidth}
      \hspace{0.01\paperwidth}
      \begin{minipage}{1.0\textwidth}
        \Large
        Honors College
        \ifdefined\@major
          \par
          \@major
        \fi
      \end{minipage}
      \vspace{0.25in}
    \end{minipage}
    \begin{minipage}[b][3.9in][c]{0.5\paperwidth}
      \vspace{0.5in}
      \begin{minipage}[][][c]{1.0\textwidth}
        \centering
        \bfseries
        \rmfamily
        \fontsize{2.75cm}{2.75cm}\selectfont{}
        \inserttitle{}
        % \fontsize{2.0cm}{2.0cm}\selectfont{}
        % Subtitle\par{}
      \end{minipage}
      \vfill{}
      \begin{minipage}[][][c]{1.0\textwidth}
        \centering
        \Large
        \insertauthor
      \end{minipage}
      \vspace{0.25in}
    \end{minipage}
    \begin{minipage}[b][3.9in][c]{0.23\paperwidth}
      \hfill{}
      \includegraphics[width=6.83in]{img/utd-logo.pdf}
    \end{minipage}
  \end{beamercolorbox}
  
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{1em}
  \end{beamercolorbox}
}

\setbeamerfont{structure}{series=\bf,family=\sffamily,size=\Large}

\setbeamertemplate{block begin}{%
  \vskip.75ex
  \begin{beamercolorbox}[leftskip=1em,colsep*=0.75ex]{block title}%
    \usebeamerfont{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=0.75ex,sep=0.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-0.25ex}{\vskip-0.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{%
  \end{beamercolorbox}
  \vskip1ex
}

\setbeamertemplate{navigation symbols}{}
